<resources>

    <!-- Text -->
    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Header">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.PostTitle">
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="Text.PostLikes">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.PostUsername">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.PostLocation">
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="Text.PostSubtitle">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.PostInfoTitle">
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>

    <style name="Text.PostInfoSubtitle">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Profile" parent="TextAppearance.AppCompat">

    </style>

    <style name="Text.Profile.Name">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Profile.Indicator">
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Profile.IndicatorFooter">
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="Text.Profile.ScreenTitle">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Profile.Description" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="Text.Profile.ExternalLink" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.StoryUsername">
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="Text.StoryDetailUsername">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Footer">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Dialog" parent="TextAppearance.AppCompat">

    </style>

    <style name="Text.Dialog.Message">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.SectionIndicator">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">#F00</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">end|top</item>
        <item name="android:paddingEnd">@dimen/spacing_xxxs</item>
        <item name="android:background">@drawable/bg_section_indicator</item>
    </style>

    <!-- Input -->
    <style name="Input" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>

    <style name="Input.Normal">
        <item name="boxStrokeColor">@color/stroke_input_dark</item>
    </style>

    <!-- Progress -->
    <style name="Progress" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>

</resources>